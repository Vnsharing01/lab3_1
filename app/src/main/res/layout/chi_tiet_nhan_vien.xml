<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thong_tin_nhan_vien">

    <TextView
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:id="@+id/chitietNV"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:text="Chi tiết nhân viên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray" />
    <TableLayout

        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/chitietNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical">

        <TableRow>

            <TextView
                android:textSize="30sp"
                android:text="Họ tên: "
                android:textColor="@android:color/white"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:textSize="30sp"
                android:id="@+id/tvHoten"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:textSize="30sp"
                android:text="Chức vụ :"
                android:textColor="@android:color/white"
                />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvChucvu"
                android:textSize="30sp"
                android:text="Hole"
                android:textColor="@android:color/white"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:textSize="30sp"
                android:text="Phòng Ban:"
                android:textColor="@android:color/white"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvPhongban"
                android:textSize="30sp"
                android:text="Deparment:"
                android:textColor="@android:color/white"/>

        </TableRow>
        <TableRow>
            <TextView
                android:textSize="30sp"
                android:text="Miêu tả:"
                android:textColor="@android:color/white"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvMota"
                android:textSize="30sp"
                android:text=" Describe "
                android:textColor="@android:color/white"/>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>